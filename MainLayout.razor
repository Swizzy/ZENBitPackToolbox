@inherits LayoutComponentBase

<MudThemeProvider Theme="new MudTheme()" @bind-IsDarkMode="@_isDarkMode" @ref="_mudThemeProvider" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudText Typo="Typo.h5" Class="ml-3">ZEN BitPack Toolbox by Swizzy</MudText>
        <MudSpacer />
        <MudIconButton @onclick="ToggleDarkMode" Color="Color.Inherit" Icon="@ModeIcon" Title="@ModeTitle" />
    </MudAppBar>
    <MudMainContent>
        <MudContainer Class="mb-12">
            @Body
        </MudContainer>
    </MudMainContent>
    <MudAppBar Dense="true" Bottom="true">
        <MudText>Version: <MudLink Href="@RepoUrl">@AppVersion</MudLink></MudText>
    </MudAppBar>
</MudLayout>

