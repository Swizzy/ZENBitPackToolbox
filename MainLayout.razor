@inherits LayoutComponentBase

<MudThemeProvider Theme="new MudTheme()" @bind-IsDarkMode="@_isDarkMode" @ref="_mudThemeProvider" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1" Color="Color.Dark">
        <MudText Typo="Typo.h5" Class="ml-3">ZEN BitPack Toolbox by Swizzy</MudText>
        <MudSpacer />
        <MudIconButton @onclick="ToggleDarkMode" Color="Color.Inherit" Icon="@ModeIcon" Title="@ModeTitle" />
    </MudAppBar>
    <MudMainContent>
        <MudContainer Class="mb-12 mt-1">
            <CascadingValue Value="@StateManager" IsFixed="true">
                @Body
            </CascadingValue>
        </MudContainer>
    </MudMainContent>
    <MudAppBar Dense="true" Bottom="true" Elevation="1" Color="Color.Dark">
        <MudText>Version: <MudLink Href="@RepoUrl" Color="Color.Info">@AppVersion</MudLink></MudText>
    </MudAppBar>
</MudLayout>

